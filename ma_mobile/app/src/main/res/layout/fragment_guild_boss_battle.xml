<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Loading indicator -->
        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone" />

        <!-- No active battle layout -->
        <LinearLayout
            android:id="@+id/layout_no_battle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="⚔️"
                android:textSize="64sp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No Active Special Mission"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tv_member_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Members: 0"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <Button
                android:id="@+id/btn_start_mission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start Special Mission"
                android:textAllCaps="false"
                android:paddingHorizontal="24dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Special Mission Info:\n• Duration: 2 weeks\n• Boss HP: 100 × members\n• Complete tasks together\n• Earn rewards!"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginTop="24dp"
                android:padding="16dp"
                android:background="@android:color/white"
                android:elevation="2dp" />
        </LinearLayout>

        <!-- Active battle layout -->
        <LinearLayout
            android:id="@+id/layout_active_battle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <!-- Boss Info Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tv_boss_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Guild Boss"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/holo_red_dark"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tv_boss_hp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="300 / 300 HP"
                        android:textSize="18sp"
                        android:layout_marginBottom="8dp" />

                    <ProgressBar
                        android:id="@+id/boss_progress_bar"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:max="100"
                        android:progress="0"
                        android:progressTint="@android:color/holo_green_dark"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tv_progress_percentage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0%"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tv_time_remaining"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time Remaining: 14 days"
                        android:textSize="14sp"
                        android:textColor="@android:color/holo_orange_dark" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- My Progress Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="My Progress"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/tv_my_damage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="My Damage: 0 HP"
                        android:textSize="16sp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tv_my_badge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="My Badge: 🥉 Bronze Champion"
                        android:textSize="16sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Members Progress -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Guild Members Progress"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_member_progress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
