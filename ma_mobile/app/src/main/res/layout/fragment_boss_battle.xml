<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- XP Progress View (shown when no boss available) -->
        <LinearLayout
            android:id="@+id/layout_xp_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFFFFF"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Level Up to Fight Boss!"
                        android:textColor="#9C27B0"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:layout_gravity="center"
                        android:layout_marginBottom="16dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Complete more tasks to gain XP and unlock the boss battle."
                        android:textColor="#757575"
                        android:textSize="14sp"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:layout_marginBottom="24dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Your Progress"
                        android:textColor="#000000"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ProgressBar
                            android:id="@+id/pb_xp_progress"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="0dp"
                            android:layout_height="24dp"
                            android:layout_weight="1"
                            android:progressTint="#4CAF50"
                            android:progressBackgroundTint="#E0E0E0"
                            android:max="100"
                            android:progress="50"/>

                        <TextView
                            android:id="@+id/tv_xp_progress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="100/200 XP"
                            android:textColor="#000000"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginStart="12dp"
                            android:minWidth="90dp"
                            android:textAlignment="textEnd"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- Battle View (shown when boss available/battle active) -->
        <LinearLayout
            android:id="@+id/layout_battle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <!-- Boss Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Boss Name -->
                <TextView
                    android:id="@+id/tv_boss_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shadow Lurker"
                    android:textColor="#9C27B0"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_marginBottom="8dp"/>

                <!-- Boss Level -->
                <TextView
                    android:id="@+id/tv_boss_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Level 1 Boss"
                    android:textColor="#757575"
                    android:textSize="16sp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="16dp"/>

                <!-- Boss Image Placeholder -->
                <ImageView
                    android:id="@+id/iv_boss_image"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:src="@android:drawable/ic_menu_help"
                    android:tint="#9C27B0"
                    android:layout_marginBottom="16dp"/>

                <!-- Boss Description -->
                <TextView
                    android:id="@+id/tv_boss_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="A mysterious creature that emerges from the darkness."
                    android:textColor="#424242"
                    android:textSize="14sp"
                    android:textAlignment="center"
                    android:layout_marginBottom="16dp"/>

                <!-- HP Bar Container -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Boss HP"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ProgressBar
                            android:id="@+id/pb_boss_hp"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="0dp"
                            android:layout_height="24dp"
                            android:layout_weight="1"
                            android:progressTint="#9C27B0"
                            android:progressBackgroundTint="#E0E0E0"
                            android:max="100"
                            android:progress="100"/>

                        <TextView
                            android:id="@+id/tv_boss_hp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="200/200"
                            android:textColor="#000000"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginStart="8dp"
                            android:minWidth="70dp"
                            android:textAlignment="textEnd"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Player Stats Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Stats"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"/>

                <!-- Power Points -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Power Points (PP):"
                        android:textColor="#424242"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/tv_user_pp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="150"
                        android:textColor="#9C27B0"
                        android:textSize="14sp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <!-- Success Rate -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Hit Chance:"
                        android:textColor="#424242"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/tv_success_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="67%"
                        android:textColor="#9C27B0"
                        android:textSize="14sp"
                        android:textStyle="bold"/>
                </LinearLayout>

                <!-- Attacks Remaining -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Attacks Remaining:"
                        android:textColor="#424242"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/tv_attacks_remaining"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:textColor="#9C27B0"
                        android:textSize="14sp"
                        android:textStyle="bold"/>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Equipment Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_equipment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Active Equipment"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:id="@+id/tv_active_equipment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No equipment selected"
                    android:textColor="#757575"
                    android:textSize="14sp"
                    android:minHeight="40dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_select_equipment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select Equipment"
                    android:textColor="#FFFFFF"
                    app:backgroundTint="#2196F3"
                    app:cornerRadius="8dp"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Attack Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_attack"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:text="ATTACK!"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            app:backgroundTint="#9C27B0"
            app:cornerRadius="12dp"
            android:layout_marginBottom="16dp"/>

        <!-- Start Battle Button (initially visible) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_start_battle"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:text="START BATTLE"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            app:backgroundTint="#4CAF50"
            app:cornerRadius="12dp"
            android:visibility="gone"/>

        <!-- Loading Progress -->
        <ProgressBar
            android:id="@+id/progress_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            android:indeterminateTint="#9C27B0"/>

        <!-- Battle Result Text -->
        <TextView
            android:id="@+id/tv_battle_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textAlignment="center"
            android:padding="16dp"
            android:visibility="gone"/>

        </LinearLayout>
        <!-- End of Battle View -->

    </LinearLayout>
</ScrollView>
