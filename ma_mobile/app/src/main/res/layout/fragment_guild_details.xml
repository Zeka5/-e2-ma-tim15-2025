<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5">

    <!-- Guild Info Card -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tv_guild_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guild Name"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#212121" />

            <TextView
                android:id="@+id/tv_member_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 members"
                android:textSize="14sp"
                android:textColor="#757575"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Invite Friends Button (only for leader) -->
    <Button
        android:id="@+id/btn_invite_friends"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="Invite Friends"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:padding="16dp"
        app:cornerRadius="8dp"
        android:backgroundTint="#9C27B0"
        android:drawableStart="@android:drawable/ic_input_add"
        android:drawablePadding="8dp"
        android:visibility="gone" />

    <!-- Members Header -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Members"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:padding="16dp" />
    </com.google.android.material.card.MaterialCardView>

    <!-- Members List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_members"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:clipToPadding="false" />

    <!-- Leave/Delete Guild Button -->
    <Button
        android:id="@+id/btn_leave_delete_guild"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Leave Guild"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:padding="16dp"
        app:cornerRadius="8dp"
        android:backgroundTint="#F44336" />

    <!-- Loading -->
    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

</LinearLayout>
